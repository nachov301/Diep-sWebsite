  <body>
    <div class="centered">
      <div class="dataHolder">
        <h1>Login</h1>

        <p><%= message %></p>

        <form class="" action="/login" method="post">

        <input class="userFields" type="text" name="username" value="" placeholder="User" autocomplete="off">
        <input class="userFields" type="password" name="password" value="" placeholder="Password">

        <button type="submit" class="btn btn-lg login" name="button">Login</button>

        </form>

      </div>
      <div class="sign-up">
        <p>or</p>
         <!-- <form class="" action="/signUp" method="post">
          <button class="btn btn-primary btn-signUp" type="submit" name="button">Sign up</button>
        </form> -->

         <form class="" action="" method="">
          <button class="btn btn-primary btn-signUp" type="submit" name="button">Sign up (temporarily unavailable :'( )</button>
        </form> 

      </div>

    </div>
  </body>
</html>
