<%-include("partials/header.ejs")%>

<body>
  <div class="container-fluid compose-container">
    <form class="" action="/update" method="post">

      <!-- <div class="form-group compose-text">
        <label for="">Enter likes</label>
        <input type="text" name="likes" value="">
      </div> -->
      <div class="form-group compose-text">
        <label for="">Enter post title</label>
        <input class="width70 invisibleInputBox" type="text" name="postTitle" value="<%=title%>">
      </div>
      <div class="form-group compose-text">
        <label for="">Enter URL from an image</label>
        <input class="width70 invisibleInputBox" type="text" name="postURL" value="">
      </div>
      <div class="form-group compose-text">
        <label for="">Enter post text</label>
        <textarea class="postContent invisibleInputBox" name="postText" rows="8" cols="80"><%=content%></textarea>
      </div>
       <div class="container-fluid compose-text">
        <p>Choose a category:</p>



      <div class="checkboxCategories">
       <input class="check" type="radio" name="category" id="kyRong" value="kyRong" checked="checked">
       <span>Kỷ Rồng</span>
     </div>
     <div class="checkboxCategories">
       <input class="check" type="radio" name="category" id="pangea" value="pangea">
       <span>Pangea</span>
      </div>
     <div class="checkboxCategories">
       <input class="check" type="radio" name="category" id="lemuria" value="lemuria">
       <span>Lemuria</span>
     </div>
     <div class="checkboxCategories">
       <input class="check" type="radio" name="category" id="atlantis" value="atlantis">
       <span>Atlantis</span>
     </div>
     <div class="checkboxCategories">
       <input class="check" type="radio" name="category" id="hienDay" value="hienDay">
       <span>Hiện đại</span>
     </div>
     <div class="checkboxCategories">
       <input class="check" type="radio" name="category" id="khac" value="khac">
       <span>Khác</span>
     </div>

  </div>

     <div class="container-fluid compose-text">
       <p></p>
       <p>Choose visibility:</p>

          <div class="checkboxCategories">
           <input class="check" type="radio" name="visibility" id="private" value="private" checked="checked">
           <span>Private (Only you will be able to see this post)</span>
         </div>
         <div class="checkboxCategories">
           <input class="check" type="radio" name="visibility" id="public" value="public">
           <span>Public (Everybody will be able to read this post)</span>
          </div>


     </div>

      <button class="btn-primary btn-lg btn-submit" type="submit" name="button">Submit</button>
      <input class="hidden" type="text" name="postID" value="<%= id %>">
    </form>
  </div>
</body>

<%-include("partials/footer")%>
